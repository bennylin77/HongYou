    font-size: 20px;
    line-height: 30px;  
}
.index_top_container .top_1998_container{
    margin: 0 auto;
    width: 410px;
    margin-top: 20px;
}
.top_1998_container h2.no-background {
    position: relative;
    overflow: hidden;  
    span {
        display: inline-block;
        vertical-align: baseline;
        zoom: 1;
        *display: inline;
        *vertical-align: auto;
        position: relative;
        padding: 0 20px;
        font-size: 20px;
        letter-spacing: 2px;
        &:before, &:after {
            content: '';
            display: block;
            width: 1000px;
            position: absolute;
            top: 0.5em;
            border-top: 2px solid #ffffff;
        }
        &:before { right: 100%; }
        &:after { left: 100%; }
    }
}
.top_arrow_container{
  position: relative;
  margin: 0px auto;
  width: 80px;
  top: 0px;  
} 
.arrow_down{
  width: 100%;
}
