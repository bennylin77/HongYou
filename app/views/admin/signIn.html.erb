<div style="height: 3000px" class="container">
<br><br><br><br><br><br>
<% flash.each_with_index do |(type, message), i| %>
  <div class="alert <%= alert_class_for(type) %> flash_<%=i%> alert-dismissible fade in">
    <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
    <%= message.html_safe %>
  </div>
<% end %>
<div class="btn-group" role="group" aria-label="...">
  <%= link_to '工作機會', jobs_path, class: 'btn btn-default'  %>	
</div>
<br><br>
<%=form_tag do%>
  <div class="form-group">			
	<%=text_field_tag :account, params[:account], class: "form-control", placeholder: '帳號'%>
  </div>	
  <div class="form-group">	
	<%=password_field_tag :password, params[:password], class: "form-control", placeholder: '密碼'%>	
  </div>		
	<%=submit_tag "登入", class: "btn btn-default"%>
<%end%>		
</div>
