<%= form_for(@job, html: {class: "form-horizontal", role: "form"}) do |f| %>
  <% if @job.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@job.errors.count, "error") %> prohibited this job from being saved:</h2>

      <ul>
      <% @job.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
	<div class="form-group">
		<label class="col-sm-2 control-label">職務名稱</label>
		<div class="col-sm-10">
			<%= f.text_field :title, placeholder: 'ex. 管線工程師', class: "form-control" %>
		</div>	
	</div>
	<div class="form-group">
		<label class="col-sm-2 control-label">職務內容</label>
		<div class="col-sm-10">
			<%= f.text_area :content, placeholder: 'ex. 協助無塵作業', class: "form-control", rows: '5' %>
		</div>
	</div>	
	<div class="form-group">
		<label class="col-sm-2 control-label">上班地點</label>
		<div class="col-sm-10">
			<%= f.text_field :location, placeholder: 'ex. 桃園市中壢區', class: "form-control" %>
		</div>	
	</div>
	<div class="form-group">
		<label class="col-sm-2 control-label">工作性質</label>
		<div class="col-sm-10">
			<label class="radio-inline"><%=f.radio_button :part_time_c, true %>是</label>
			<label class="radio-inline"><%=f.radio_button :part_time_c, false%>否</label>
		</div>	
	</div>
	<div class="form-group">
		<label class="col-sm-2 control-label">需求人數</label>
		<div class="col-sm-10">
			<%= f.text_field :quantity, placeholder: 'ex. 3人', class: "form-control" %>
		</div>	
	</div>
	<div class="form-group">
		<label class="col-sm-2 control-label">工作經歷</label>
		<div class="col-sm-10">
			<%= f.text_field :experience, placeholder: 'ex. 1年~3年', class: "form-control" %>
		</div>	
	</div>
	<div class="form-group">
		<label class="col-sm-2 control-label">學歷要求</label>
		<div class="col-sm-10">
			<%= f.text_field :education, placeholder: 'ex. 大學', class: "form-control" %>
		</div>	
	</div>		
	<div class="form-group">
		<label class="col-sm-2 control-label">科系要求</label>
		<div class="col-sm-10">
			<%= f.text_field :major, placeholder: 'ex. 土木', class: "form-control" %>
		</div>	
	</div>			
	<div class="form-group">
		<label class="col-sm-2 control-label">備註</label>
		<div class="col-sm-10">
			<%= f.text_area :note, placeholder: '', class: "form-control" %>
		</div>	
	</div>				
	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
			<%= f.submit '儲存',  class: "btn orange_btn backend_btn", style: 'margin-right: 5px;'  %>
		</div>
	</div>	
<% end %>
